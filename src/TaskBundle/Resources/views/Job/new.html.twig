{% extends 'TaskBundle:Template:layout.html.twig' %}

{% block content -%}
    <div class="col-lg-12">
        <h4 class="list-group-item-heading">New Job Post</h4>
    </div>
    <div class="col-md-12">    
        <form role="form" action="{{ path('job_create') }}" name="form" id="form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-md-6">
                    <label for="email" class="control-label"> Your email *:</label>
                    <input type="email" class="form-control" name="email" id="email" required>                 
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="title" class="control-label"> Job Title  *:</label>
                    <input type="text" name="title" id="title" class="form-control" required/>                
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="description" class="control-label"> Job Description *:</label>
                    <textarea type="text" name="description" id="description" class="form-control" required></textarea>               
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-bg"> Reset </button>                 
                    <button type="submit" class="btn btn-default"> Submit </button>                 
                </div>
            </div> 
                
            
        </form>        
    </div>
{% endblock %}
