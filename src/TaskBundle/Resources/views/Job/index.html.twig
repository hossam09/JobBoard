{% extends 'TaskBundle:Template:layout.html.twig' %}

{% block content -%}
    <div class="row">
        <div class="col-lg-8">   
            <h4 class="list-group-item-heading">Job list (Moderator View only)</h4>
        </div>
        <div class="col-lg-4">
            <form role="form" action="{{ path('job_new') }}" method="get">  
                <button type="submit" class="btn btn-primary">  Post New  Job </button> 
            </form>
        </div>
    </div>
                
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created By</th>
                    <th>Created</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.description }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        </div>
    </div>
        
{% endblock %}
